<div class="row">
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://news.northeastern.edu/wp-content/uploads/2022/05/movie_theater_1400.jpg)">
  <h1>Save any kind of movie list</h1>
</div>

<div class="py-3 d-flex justify-content-between">
  <h1>My Lists</h1>
  <div><%= link_to "Create a movie list", new_list_path, class:"btn btn-success" %></div>
</div>
</div>


<div class="col-4">
  <% @lists.each do |list| %>
    <div class="card-list">
      <li><%= link_to list.name, list_path(list) %></li>
    </ul>
  <% end %>
</div>
